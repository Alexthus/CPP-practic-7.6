cmake_minimum_required(VERSION 3.18)
project(
    matrixlib
    VERSION 0.0.0
    DESCRIPTION "Cpp library"
    LANGUAGES CXX
)
set(CMAKE_CXX_STANDARD 17)
set(CMAKE_CXX_STANDARD_REQUIRED ON)

set(CMAKE_BUILD_TYPE Debug)

add_executable(test-shared-matrix
    src/main.cpp
    )

target_include_directories(test-shared-matrix 
PUBLIC
    "$<BUILD_INTERFACE:${CMAKE_SOURCE_DIR}>"
    "$<BUILD_INTERFACE:${CMAKE_CURRENT_SOURCE_DIR}>"
    "$<BUILD_INTERFACE:${CMAKE_CURRENT_BINARY_DIR}>"
)    

target_link_libraries(test-shared-matrix PRIVATE "${CMAKE_SOURCE_DIR}/libs/matrixlib/shared-matrixlib.lib")
